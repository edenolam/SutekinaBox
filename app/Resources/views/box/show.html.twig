{% extends 'base.html.twig' %}

{% block body %}
    <h1>Box</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ box.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ box.name }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ box.theme }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if box.createdAt %}{{ box.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if box.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('box_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('box_edit', { 'id': box.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
