{% extends 'base.html.twig' %}

{% block body %}
    <h2>Liste des boxes</h2>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Theme</th>
                <th>date de creation</th>
                <th>Statut</th>
                <th>produit</th>
                <th><i class="fa fa-eye"></i></th>
                <th><i class="fa fa-edit"></i></th>
                <th><i class="fa fa-trash"></i></th>
            </tr>
        </thead>
        <tbody>
        {% for box in boxes %}
            <tr>
                <td><a href="{{ path('box_show', { 'id': box.id }) }}">{{ box.id }}</a></td>
                <td>{{ box.name }}</td>
                <td>{{ box.price }} €</td>
                <td>{{ box.theme }}</td>
                <td>{% if box.createdAt %}{{ box.createdAt|date('d-m-Y') }}{% endif %}</td>
                <td>{{ box.statut }}</td>
                <td>
                    <ul>
                        {% for product in box.products %}
                            <li>{{ product.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td><a href="{{ path('box_show', { 'id': box.id }) }}"><i class="fa fa-eye"></i></a></td>
                <td><a href="{{ path('box_edit', { 'id': box.id }) }}"><i class="fa fa-edit"></i></a></td>
                <td><a href="{{ path('box_delete', { 'id': box.id }) }}"><i class="fa fa-trash"></i></a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('box_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Créer une boxe</a>

{% endblock %}
