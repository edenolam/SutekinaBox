{% extends 'base.html.twig' %}

{% block body %}
    <h1>Boxes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Theme</th>
                <th>Createdat</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for box in boxes %}
            <tr>
                <td><a href="{{ path('box_show', { 'id': box.id }) }}">{{ box.id }}</a></td>
                <td>{{ box.name }}</td>
                <td>{{ box.theme }}</td>
                <td>{% if box.createdAt %}{{ box.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if box.status %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('box_show', { 'id': box.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('box_edit', { 'id': box.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('box_new') }}">Create a new box</a>
        </li>
    </ul>
{% endblock %}
